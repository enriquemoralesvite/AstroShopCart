---
import Layout from '../layouts/Layout.astro';
---
<Layout>
  <section id="checkout-section" class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">Checkout</h1>
    
    <div id="cart-summary" class="mb-8">
      <div id="cart-items" class="space-y-4 mb-6">
        <p class="text-gray-500">Cargando items...</p>
      </div>

      <div class="border-t pt-4">
        <div class="flex justify-between mb-2">
          <span class="text-gray-600">Subtotal</span>
          <span id="subtotal">$0.00</span>
        </div>
        <div class="flex justify-between mb-2">
          <span class="text-gray-600">IVA (16%)</span>
          <span id="tax">$0.00</span>
        </div>
        <div class="flex justify-between font-bold text-lg">
          <span>Total</span>
          <span id="total">$0.00</span>
        </div>
      </div>
    </div>

    <form id="checkout-form" class="space-y-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <input type="text" placeholder="Nombre" class="p-2 border rounded" required>
        <input type="email" placeholder="Email" class="p-2 border rounded" required>
        <input type="text" placeholder="Dirección" class="p-2 border rounded" required>
        <input type="tel" placeholder="Teléfono" class="p-2 border rounded" required>
      </div>
      <button 
        type="submit" 
        id="submit-button"
        class="w-full bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700 disabled:bg-gray-400"
        disabled
      >
        Completar Compra
      </button>
    </form>
  </section>

  <script is:inline>
    let cartItems = [];
    let subtotal = 0;

    function updateCheckoutUI() {
      try {
        const cart = JSON.parse(localStorage.getItem('cart')) || [];
        const cartItemsContainer = document.getElementById('cart-items');
        const subtotalElement = document.getElementById('subtotal');
        const taxElement = document.getElementById('tax');
        const totalElement = document.getElementById('total');
        const submitButton = document.getElementById('submit-button');

        if (cart.length === 0) {
          cartItemsContainer.innerHTML = '<p class="text-gray-500">El carrito está vacío</p>';
          subtotalElement.textContent = '$0.00';
          taxElement.textContent = '$0.00';
          totalElement.textContent = '$0.00';
          submitButton.disabled = true;
          return;
        }

        subtotal = cart.reduce((sum, item) => sum + item.price, 0);
        const tax = subtotal * 0.16;
        const total = subtotal + tax;

        cartItemsContainer.innerHTML = cart
          .map(item => `
            <div class="flex items-center border-b pb-4">
              <div class="relative w-16 h-16 rounded bg-gray-200 mr-4 flex-shrink-0">
                <img src="${item.image}" alt="${item.name}" class="object-contain w-full h-full" />
                <span class="absolute -top-2 -right-2 bg-gray-700 text-white w-5 h-5 rounded-full flex items-center justify-center text-xs">1</span>
              </div>
              <div class="flex-grow">
                <h3 class="font-semibold text-sm">${item.name}</h3>
                <p class="text-gray-500 text-xs">Color: ${item.color || 'N/A'}</p>
                <p class="font-semibold mt-1">$${item.price.toFixed(2)}</p>
              </div>
            </div>
          `)
          .join('');

        subtotalElement.textContent = `$${subtotal.toFixed(2)}`;
        taxElement.textContent = `$${tax.toFixed(2)}`;
        totalElement.textContent = `$${total.toFixed(2)}`;
        submitButton.disabled = false;
      } catch (error) {
        console.error('Error updating checkout UI:', error);
      }
    }

    document.addEventListener('DOMContentLoaded', updateCheckoutUI);

    document.getElementById('checkout-form').addEventListener('submit', async (e) => {
      e.preventDefault();
      try {
        // Aquí iría la lógica de procesamiento del pago
        alert('¡Gracias por tu compra!');
        localStorage.removeItem('cart');
        window.location.href = '/';
      } catch (error) {
        console.error('Error processing checkout:', error);
        alert('Hubo un error al procesar tu compra. Por favor intenta de nuevo.');
      }
    });
  </script>
</Layout>